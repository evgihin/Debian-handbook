msgstr "Thunderbird"

msgid "<primary>email</primary><secondary><emphasis role=\"pkg\">thunderbird</emphasis></secondary>"
msgstr "<primary>email</primary><secondary><emphasis role=\"pkg\">thunderbird</emphasis></secondary>"

